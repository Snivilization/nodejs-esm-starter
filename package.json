{
  "name": "nodejs-esm-starter",
  "version": "1.0.0",
  "description": "Starter project for NodeJs esm packages, with esbuild, typescript, mocha, chai, eslint, istanbul/nyc, gulp",
  "type": "module",
  "main": "./dist/nodejs-esm-starter-src-bundle.js",
  "exports": {
    ".": "./dist/nodejs-esm-starter-src-bundle.js",
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib"
  ],
  "engines": {
    "node": ">=14.17.0"
  },
  "scripts": {
    "roll": "rollup -c rollup.config.mjs",
    "clean": "rimraf dist/* && rimraf out-tsc/* && rimraf out-tsc/* && rimraf lib/*",
    "build": "npm run clean && rollup -c rollup.config.mjs && cpr src/text.txt dist/ --overwrite",
    "t": "cross-env NODE_ENV=development npm run __b:dev:test",
    "mocha": "npm run t && mocha",
    "exec": "node ./dist/nodejs-esm-starter-bundle.js",
    "_build:t": "tsc && cpr src/text.txt lib/ --overwrite",
    "_build:r": "rollup -c && cpr src/text.txt lib/ --overwrite",
    "__b:dev:test": "cross-env NODE_ENV=development rollup -c rollup.config.test.mjs",
    "test": "gulp dev-mocha",
    "gulp": "gulp",
    "gulpc": "gulp clean",
    "prod": "gulp prod",
    "dev": "gulp dev",
    "watch": "gulp watch",
    "lint": "gulp lint",
    "fix": "gulp fix",
    "coverage": "nyc --reporter=lcov --reporter=text npm run test"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Snivilization/nodejs-esm-starter.git"
  },
  "keywords": [
    "esm",
    "nodejs"
  ],
  "author": "plastikfan",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Snivilization/nodejs-esm-starter/issues"
  },
  "homepage": "https://github.com/Snivilization/nodejs-esm-starter#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/chai": "^4.2.22",
    "@types/dirty-chai": "^2.0.2",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.1",
    "@types/sinon": "^10.0.4",
    "@types/sinon-chai": "^3.2.5",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "chai": "^4.3.4",
    "cpr": "^3.0.1",
    "cross-env": "^7.0.3",
    "deep-copy-all": "^1.3.4",
    "deepmerge": "^4.2.2",
    "del": "^6.0.0",
    "dirty-chai": "^2.0.1",
    "eslint": "^8.1.0",
    "eslint-plugin-node": "^11.1.0",
    "esm": "^3.2.25",
    "gulp": "^4.0.2",
    "gulp-eslint": "^6.0.0",
    "gulp-mocha": "^8.0.0",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.58.0",
    "rollup-plugin-esformatter": "^2.0.1",
    "rollup-plugin-multi-entry": "^2.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sinon": "^11.1.2",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.20",
    "ts-node": "^10.3.0",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4"
  }
}